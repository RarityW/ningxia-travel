/* 景点详情页面样式 - 大漠古韵风 */
.banner-swiper {
  width: 100%;
  height: 400rpx;
  background-color: var(--bg-sand-light);
}

.banner-image {
  width: 100%;
  height: 100%;
}

.info-card {
  padding: 32rpx;
}

.header {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
}

.name {
  font-size: 40rpx;
  font-weight: bold;
  color: var(--text-deep);
  flex: 1;
}

.grade-tag {
  padding: 8rpx 16rpx;
  background: var(--gradient-gold);
  border-radius: 8rpx;
  font-size: 24rpx;
  color: #FFFFFF;
  font-weight: bold;
  margin-left: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(184, 134, 11, 0.3);
}

.subtitle {
  font-size: 26rpx;
  color: var(--text-muted);
  margin-bottom: 24rpx;
}

.meta {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  margin-bottom: 24rpx;
}

.meta-item {
  display: flex;
  align-items: center;
  font-size: 26rpx;
  color: var(--text-warm);
}

.icon {
  font-size: 28rpx;
  margin-right: 12rpx;
}

.rating-box {
  display: flex;
  align-items: center;
  padding-top: 20rpx;
  border-top: 1rpx solid var(--divider);
}

.star {
  font-size: 32rpx;
  color: var(--primary-gold-light);
  margin-right: 8rpx;
}

.score {
  font-size: 32rpx;
  color: var(--primary-gold);
  font-weight: bold;
  margin-right: 16rpx;
}

.views {
  font-size: 24rpx;
  color: var(--text-muted);
}

.price-card {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 32rpx;
}

.price-label {
  font-size: 28rpx;
  color: var(--text-muted);
}

.price-value {
  font-size: 48rpx;
  color: var(--primary-terracotta);
  font-weight: bold;
}

.features-card {
  padding: 32rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: var(--text-deep);
  margin-bottom: 20rpx;
}

.feature-list {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.feature-item {
  padding: 12rpx 24rpx;
  background-color: var(--bg-sand-light);
  border-radius: 8rpx;
  font-size: 26rpx;
  color: var(--text-warm);
}

.desc-card {
  padding: 32rpx;
}

.desc-text {
  font-size: 28rpx;
  color: var(--text-warm);
  line-height: 1.8;
}

.tags-card {
  padding: 32rpx;
  margin-bottom: 120rpx;
}

.tag-list {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.tag {
  padding: 8rpx 20rpx;
  background-color: rgba(193, 112, 61, 0.12);
  border-radius: 8rpx;
  font-size: 24rpx;
  color: var(--primary-terracotta);
}

.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  align-items: center;
  padding: 20rpx 32rpx;
  background-color: var(--card-white);
  box-shadow: 0 -4rpx 16rpx rgba(184, 134, 11, 0.1);
  gap: 20rpx;
}

.action-btn {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 80rpx;
  border-radius: 8rpx;
  background-color: var(--bg-sand-light);
  transition: all 0.3s;
}

.action-btn:active {
  opacity: 0.8;
}

.action-btn.primary {
  background: var(--gradient-gold);
  flex: 2;
}

.btn-icon {
  font-size: 32rpx;
  margin-bottom: 4rpx;
}

.btn-text {
  font-size: 24rpx;
  color: var(--text-warm);
}

.primary .btn-text {
  color: #FFFFFF;
  font-size: 28rpx;
  font-weight: bold;
}

.loading {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100vh;
  color: var(--text-muted);
  font-size: 28rpx;
}
