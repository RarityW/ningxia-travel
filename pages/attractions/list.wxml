<!-- 景点列表页面 -->
<view class="container">
  <!-- 分类筛选 -->
  <scroll-view class="category-scroll" scroll-x>
    <view class="category-list">
      <view
        wx:for="{{categories}}"
        wx:key="*this"
        class="category-item {{currentCategory === item ? 'active' : ''}}"
        bindtap="switchCategory"
        data-category="{{item}}"
      >
        {{item}}
      </view>
    </view>
  </scroll-view>

  <!-- 景点列表 -->
  <view class="attraction-list">
    <view
      wx:for="{{attractions}}"
      wx:key="_id"
      class="attraction-item"
      bindtap="goToDetail"
      data-id="{{item._id}}"
    >
      <image class="attraction-image" src="{{item.coverImage}}" mode="aspectFill"></image>
      <view class="attraction-info">
        <view class="attraction-header">
          <text class="attraction-name">{{item.name}}</text>
          <view class="grade-tag">{{item.grade}}</view>
        </view>
        <view class="attraction-meta">
          <text class="location">{{item.region}}</text>
          <view class="rating">
            <text class="star">★</text>
            <text class="score">{{item.rating}}</text>
            <text class="views">({{item.views}}人浏览)</text>
          </view>
        </view>
        <view class="attraction-tags">
          <text wx:for="{{item.tags}}" wx:key="*this" wx:for-item="tag" class="tag">{{tag}}</text>
        </view>
        <view class="attraction-footer">
          <text class="price">¥{{item.ticketPrice}}</text>
          <text class="open-time">{{item.openTime}}</text>
        </view>
      </view>
    </view>
  </view>

  <!-- 加载状态 -->
  <view class="loading" wx:if="{{loading}}">
    <text>加载中...</text>
  </view>

  <!-- 暂无数据 -->
  <view class="empty" wx:if="{{!loading && attractions.length === 0}}">
    <text>暂无景点数据</text>
  </view>
</view>
