/* 景点列表页面样式 - 大漠古韵风 */

/* 分类栏 */
.category-scroll {
  position: sticky;
  top: 0;
  background-color: var(--card-white);
  white-space: nowrap;
  padding: 20rpx 0;
  z-index: 100;
  box-shadow: 0 4rpx 16rpx rgba(184, 134, 11, 0.08);
}

.category-list {
  display: inline-block;
  padding: 0 20rpx;
}

.category-item {
  display: inline-block;
  padding: 12rpx 32rpx;
  margin-right: 16rpx;
  background-color: var(--bg-sand-light);
  border-radius: 40rpx;
  font-size: 26rpx;
  color: var(--text-warm);
  font-weight: 500;
  transition: all 0.3s;
}

.category-item.active {
  background: var(--gradient-sand);
  color: #FFFFFF;
  box-shadow: 0 4rpx 12rpx rgba(184, 134, 11, 0.25);
}

/* 景点列表 */
.attraction-list {
  padding: 24rpx;
  min-height: 100vh;
}

.attraction-item {
  display: flex;
  background-color: var(--card-white);
  border-radius: 20rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(184, 134, 11, 0.08);
  transition: transform 0.3s;
}

.attraction-item:active {
  transform: scale(0.98);
}

.attraction-image {
  width: 240rpx;
  height: 180rpx;
  border-radius: 16rpx;
  flex-shrink: 0;
}

.attraction-info {
  flex: 1;
  margin-left: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.attraction-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 12rpx;
}

.attraction-name {
  font-size: 28rpx;
  font-weight: 600;
  color: var(--text-deep);
  flex: 1;
}

.attraction-tags {
  display: flex;
  align-items: center;
  gap: 8rpx;
  flex-wrap: wrap;
}

.tag {
  padding: 4rpx 12rpx;
  background-color: rgba(184, 134, 11, 0.1);
  border-radius: 8rpx;
  font-size: 22rpx;
  color: var(--primary-gold);
}

.attraction-meta {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.location {
  font-size: 22rpx;
  color: var(--text-muted);
}

.rating {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.star {
  font-size: 24rpx;
  color: var(--primary-gold-light);
}

.score {
  font-size: 24rpx;
  font-weight: 600;
  color: var(--text-deep);
}

.views {
  font-size: 22rpx;
  color: var(--text-muted);
}

.attraction-footer {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 12rpx;
}

.price {
  font-size: 32rpx;
  font-weight: 700;
  color: var(--primary-gold);
}

.open-time {
  font-size: 22rpx;
  color: var(--text-muted);
}

/* 加载状态 */
.loading {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 120rpx 40rpx;
}

.spinner {
  width: 60rpx;
  height: 60rpx;
  border: 6rpx solid var(--border-gold);
  border-top-color: var(--primary-gold);
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  to {
    transform: rotate(360deg);
  }
}

/* 空状态 */
.empty {
  text-align: center;
  padding: 120rpx 40rpx;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 24rpx;
}

.empty-text {
  font-size: 28rpx;
  color: var(--text-muted);
}
