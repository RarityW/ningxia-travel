page {
  background-color: var(--bg-warm-cream);
  min-height: 100vh;
}

/* 分类切换 */
.category-tabs {
  display: flex;
  background-color: var(--card-white);
  padding: 20rpx 0;
  position: sticky;
  top: 0;
  z-index: 100;
  box-shadow: 0 4rpx 16rpx rgba(184, 134, 11, 0.08);
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 16rpx 0;
  font-size: 28rpx;
  color: var(--text-muted);
  font-weight: 500;
  transition: all 0.3s;
}

.tab-item.active {
  color: var(--primary-gold);
  font-weight: 600;
  position: relative;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 48rpx;
  height: 4rpx;
  background: var(--gradient-gold);
  border-radius: 2rpx;
}

/* 收藏列表 */
.content-list {
  padding: 24rpx;
}

.item-card {
  display: flex;
  align-items: center;
  background-color: var(--card-white);
  border-radius: 20rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(184, 134, 11, 0.08);
  position: relative;
}

.item-image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 12rpx;
  flex-shrink: 0;
}

.item-info {
  flex: 1;
  margin-left: 20rpx;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.item-name {
  font-size: 30rpx;
  font-weight: 600;
  color: var(--text-deep);
}

.item-type {
  display: inline-block;
  padding: 4rpx 12rpx;
  background: var(--gradient-gold);
  border-radius: 6rpx;
  font-size: 22rpx;
  color: var(--card-white);
  align-self: flex-start;
}

.item-meta {
  display: flex;
  align-items: center;
  gap: 16rpx;
  flex-wrap: wrap;
}

.item-rating {
  font-size: 24rpx;
  color: var(--primary-gold-light);
  font-weight: 600;
}

.item-region {
  font-size: 24rpx;
  color: var(--text-muted);
}

.item-delete {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  width: 56rpx;
  height: 56rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  color: var(--text-muted);
  opacity: 0.6;
  transition: all 0.3s;
}

.item-delete:active {
  opacity: 1;
  transform: scale(0.9);
}

/* 空状态 */
.empty {
  text-align: center;
  padding: 120rpx 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 20rpx;
}

.empty-icon {
  font-size: 120rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 28rpx;
  color: var(--text-muted);
}

.empty-hint {
  font-size: 24rpx;
  color: var(--text-light);
}
