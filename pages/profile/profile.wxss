.page {
  background-color: var(--bg-warm-cream);
  min-height: 100vh;
}

/* 头部用户信息 */
.header-section {
  background: linear-gradient(135deg, var(--primary-gold), var(--primary-sand));
  padding: 60rpx 32rpx 40rpx;
  border-radius: 0 0 40rpx 40rpx;
}

.user-info {
  display: flex;
  align-items: center;
  gap: 24rpx;
}

.avatar-wrapper {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
  overflow: hidden;
  background-color: var(--bg-sand-light);
}

.avatar {
  width: 100%;
  height: 100%;
}

.user-detail {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.nickname {
  font-size: 36rpx;
  font-weight: 700;
  color: var(--card-white);
}

.user-id {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.85);
}

/* 数据统计 */
.stats-section {
  display: flex;
  justify-content: space-around;
  background-color: var(--card-white);
  margin: -30rpx 24rpx 24rpx;
  border-radius: 24rpx;
  padding: 32rpx 0;
  box-shadow: 0 8rpx 24rpx rgba(184, 134, 11, 0.12);
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
  position: relative;
}

.stat-num {
  font-size: 40rpx;
  font-weight: 700;
  color: var(--primary-gold);
}

.stat-label {
  font-size: 24rpx;
  color: var(--text-muted);
}

/* 菜单列表 */
.menu-section {
  background-color: var(--card-white);
  margin: 0 24rpx 24rpx;
  border-radius: 24rpx;
  overflow: hidden;
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 32rpx;
  position: relative;
  transition: background-color 0.3s;
}

.menu-item:active {
  background-color: var(--bg-sand-light);
}

.menu-item::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 32rpx;
  right: 32rpx;
  height: 1rpx;
  background-color: var(--divider);
}

.menu-item:last-child::after {
  display: none;
}

.menu-icon {
  font-size: 40rpx;
  margin-right: 20rpx;
}

.menu-text {
  flex: 1;
  font-size: 28rpx;
  color: var(--text-deep);
}

.menu-count {
  font-size: 24rpx;
  color: var(--primary-gold);
  font-weight: 600;
  margin-right: 8rpx;
}

.menu-arrow {
  font-size: 32rpx;
  color: var(--text-muted);
}

/* 登录按钮 */
.login-section {
  margin: 24rpx;
}

.login-btn {
  background: var(--gradient-gold);
  color: #FFF;
  border-radius: 50rpx;
  font-size: 30rpx;
  font-weight: 600;
  padding: 24rpx 0;
}

.logout-section {
  margin: 24rpx;
}

.logout-btn {
  background: transparent;
  color: var(--text-muted);
  border: 2rpx solid var(--divider);
  border-radius: 50rpx;
  font-size: 28rpx;
  padding: 20rpx 0;
}
