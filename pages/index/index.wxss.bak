/* 宁夏文旅 - 首页样式 - 大漠古韵风 */
page {
  background-color: var(--bg-warm-cream);
}

/* 额外的色变量 */
:root {
  --badge-red: linear-gradient(135deg, #FF6B6B, #FF8A80);
  --badge-orange: linear-gradient(135deg, #FF5722, #FF8A65);
  --bg-soft: var(--bg-sand-light);
}

/* 顶部导航栏 */
.nav-bar {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 32rpx;
  background: var(--gradient-sand);
  gap: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(184, 134, 11, 0.15);
}

/* 左侧定位区域 */
.location-section {
  display: flex;
  align-items: center;
  gap: 12rpx;
  flex-shrink: 0;
}

.location-icon {
  font-size: 32rpx;
}

.location-info {
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.location-text {
  font-size: 28rpx;
  font-weight: 600;
  color: var(--card-white);
}

.weather-info {
  display: flex;
  align-items: center;
  gap: 4rpx;
}

.weather-icon {
  font-size: 24rpx;
}

.temperature {
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.9);
  font-weight: 500;
}

.location-arrow {
  font-size: 20rpx;
  color: rgba(255, 255, 255, 0.7);
}

/* 搜索框 */
.search-box {
  flex: 1;
  display: flex;
  align-items: center;
  background-color: rgba(255, 255, 255, 0.28);
  border: 2rpx solid rgba(255, 255, 255, 0.4);
  border-radius: 50rpx;
  padding: 14rpx 20rpx;
  backdrop-filter: blur(10rpx);
}

.search-icon {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.85);
  margin-right: 8rpx;
}

.search-input {
  flex: 1;
  font-size: 26rpx;
  color: var(--card-white);
}

.search-input::placeholder {
  color: rgba(255, 255, 255, 0.75);
}

/* 品牌视觉区 */
.brand-section {
  margin: 24rpx;
  border-radius: 24rpx;
  overflow: hidden;
  box-shadow: 0 12rpx 40rpx rgba(184, 134, 11, 0.18);
}

.brand-swiper {
  height: 460rpx;
}

.brand-slide {
  position: relative;
  width: 100%;
  height: 100%;
}

.brand-bg {
  width: 100%;
  height: 100%;
}

.brand-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(180deg, rgba(42, 34, 24, 0.05) 0%, rgba(42, 34, 24, 0.55) 100%);
  display: flex;
  align-items: flex-end;
  padding: 48rpx 32rpx;
}

.brand-content {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.brand-slogan {
  font-size: 48rpx;
  font-weight: 700;
  color: var(--card-white);
  text-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.45);
  line-height: 1.3;
  letter-spacing: 2rpx;
}

.brand-subtitle {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.95);
  font-weight: 500;
  text-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.35);
  letter-spacing: 1rpx;
}

/* 金刚区图标 */
.diamond-section {
  background-color: var(--card-white);
  padding: 32rpx;
  margin-bottom: 16rpx;
  border-radius: 24rpx;
  margin-left: 24rpx;
  margin-right: 24rpx;
}

.diamond-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 24rpx;
}

.diamond-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 24rpx 0;
  position: relative;
  transition: transform 0.3s;
}

.diamond-item:active {
  transform: scale(0.95);
}

.diamond-icon-wrapper {
  width: 96rpx;
  height: 96rpx;
  background: var(--bg-sand-light);
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 12rpx;
  position: relative;
  box-shadow: 0 2rpx 12rpx rgba(184, 134, 11, 0.08);
}

.diamond-emoji {
  font-size: 48rpx;
}

.diamond-badge {
  position: absolute;
  top: -8rpx;
  right: -8rpx;
  min-width: 36rpx;
  padding: 4rpx 12rpx;
  background: var(--gradient-terracotta);
  border-radius: 20rpx;
  font-size: 20rpx;
  font-weight: 600;
  color: var(--card-white);
  box-shadow: 0 2rpx 8rpx rgba(193, 112, 61, 0.3);
}

.diamond-name {
  font-size: 24rpx;
  color: var(--text-warm);
  font-weight: 500;
}

/* 滚动通知栏 */
.notice-bar {
  background-color: var(--card-white);
  padding: 16rpx 0;
  margin-bottom: 16rpx;
  border-radius: 24rpx;
  margin-left: 24rpx;
  margin-right: 24rpx;
}

.notice-scroll {
  display: flex;
  gap: 24rpx;
  overflow-x: auto;
  padding: 0 32rpx;
}

.notice-item {
  flex-shrink: 0;
  font-size: 24rpx;
  color: var(--text-muted);
  white-space: nowrap;
}

/* 通用区块 */
.section-card {
  background-color: var(--card-white);
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 16rpx;
  margin-left: 24rpx;
  margin-right: 24rpx;
  box-shadow: 0 4rpx 20rpx rgba(184, 134, 11, 0.06);
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 700;
  color: var(--text-deep);
}

.section-more {
  font-size: 24rpx;
  color: var(--primary-gold);
  font-weight: 500;
}

/* 横向滚动 */
.hot-scroll {
  white-space: nowrap;
}

/* 推荐景点卡片 */
.hot-card {
  display: inline-block;
  width: 280rpx;
  margin-right: 20rpx;
  position: relative;
  border-radius: 20rpx;
  overflow: hidden;
  flex-shrink: 0;
  box-shadow: 0 4rpx 16rpx rgba(184, 134, 11, 0.12);
}

.hot-card:last-child {
  margin-right: 0;
}

.hot-image {
  width: 280rpx;
  height: 200rpx;
}

.hot-overlay {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 20rpx 16rpx;
  background: linear-gradient(180deg, rgba(0, 0, 0, 0) 0%, rgba(42, 34, 24, 0.75) 100%);
}

.hot-grade {
  display: inline-block;
  padding: 6rpx 16rpx;
  background: var(--gradient-gold);
  border-radius: 8rpx;
  font-size: 22rpx;
  color: var(--card-white);
  font-weight: 600;
  box-shadow: 0 2rpx 8rpx rgba(184, 134, 11, 0.3);
}

/* 推荐美食卡片 */
.food-card {
  display: inline-block;
  width: 280rpx;
  margin-right: 20rpx;
  position: relative;
  border-radius: 20rpx;
  overflow: hidden;
  flex-shrink: 0;
  box-shadow: 0 4rpx 16rpx rgba(184, 134, 11, 0.12);
}

.food-card:last-child {
  margin-right: 0;
}

.food-image {
  width: 280rpx;
  height: 200rpx;
}

.food-overlay {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 20rpx 16rpx;
  background: linear-gradient(180deg, rgba(0, 0, 0, 0) 0%, rgba(42, 34, 24, 0.75) 100%);
}

.food-name {
  display: block;
  font-size: 26rpx;
  font-weight: 600;
  color: var(--card-white);
  margin-bottom: 8rpx;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.3);
}

.food-price {
  display: inline-block;
  padding: 4rpx 12rpx;
  background: var(--gradient-terracotta);
  border-radius: 8rpx;
  font-size: 24rpx;
  color: var(--card-white);
  font-weight: 600;
}

/* 推荐好礼 */
.gift-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}

.gift-card {
  position: relative;
  border-radius: 20rpx;
  overflow: hidden;
  background-color: var(--bg-warm-cream);
  transition: transform 0.3s;
  box-shadow: 0 4rpx 16rpx rgba(184, 134, 11, 0.08);
}

.gift-card:active {
  transform: scale(0.98);
}

.gift-image {
  width: 100%;
  height: 220rpx;
}

.gift-info {
  padding: 20rpx;
  background-color: var(--card-white);
}

.gift-name {
  display: block;
  font-size: 26rpx;
  font-weight: 600;
  color: var(--text-deep);
  margin-bottom: 12rpx;
}

.gift-meta {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.gift-tag {
  padding: 4rpx 12rpx;
  background: var(--gradient-olive);
  border-radius: 8rpx;
  font-size: 22rpx;
  color: var(--card-white);
}

.gift-price {
  font-size: 28rpx;
  font-weight: 700;
  color: var(--primary-gold);
}
