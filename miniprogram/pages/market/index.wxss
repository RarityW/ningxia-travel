/* 宁夏旅游门票优惠 - 样式 */
page {
  background-color: #F5F0E8;
}

.container {
  min-height: 100vh;
  padding-bottom: 40rpx;
}

/* Hero区域 */
.hero-section {
  position: relative;
  padding: 32rpx;
  background: linear-gradient(180deg, #8B4513 0%, #A0522D 50%, #B8860B 100%);
}

.top-nav {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.nav-left {
  display: flex;
  align-items: center;
}

.nav-icon {
  font-size: 40rpx;
  margin-right: 12rpx;
}

.nav-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #FFF8DC;
}

.nav-right {
  display: flex;
  align-items: center;
}

.nav-dot {
  font-size: 36rpx;
  color: rgba(255, 255, 255, 0.8);
}

.nav-divider {
  width: 1px;
  height: 32rpx;
  background: rgba(255, 255, 255, 0.3);
  margin: 0 16rpx;
}

.nav-radio {
  font-size: 20rpx;
  color: rgba(255, 255, 255, 0.8);
}

.title-section {
  margin-bottom: 24rpx;
}

.main-title {
  display: block;
  font-size: 44rpx;
  font-weight: 700;
  color: #FFF;
  text-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.2);
  line-height: 1.3;
  margin-bottom: 16rpx;
}

.subtitle-badge {
  display: inline-flex;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 32rpx;
  padding: 8rpx 20rpx;
  backdrop-filter: blur(10rpx);
}

.subtitle-text {
  font-size: 24rpx;
  color: #FFF8DC;
  white-space: nowrap;
}

.hero-image-container {
  position: relative;
  width: 100%;
  height: 360rpx;
  border-radius: 24rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.15);
}

.hero-image {
  width: 100%;
  height: 100%;
}

.image-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(180deg, rgba(0,0,0,0.1) 0%, rgba(0,0,0,0.4) 100%);
}

.image-badge {
  position: absolute;
  bottom: 20rpx;
  left: 20rpx;
  right: 20rpx;
}

.badge-text {
  display: block;
  font-size: 26rpx;
  color: #FFF;
  font-weight: 500;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.3);
  text-align: center;
}

/* 优惠按钮区域 */
.action-buttons {
  display: flex;
  gap: 20rpx;
  padding: 24rpx 32rpx;
  margin-top: -40rpx;
  position: relative;
  z-index: 10;
}

.action-btn {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100rpx;
  border-radius: 20rpx;
  position: relative;
}

.primary-btn {
  background: linear-gradient(135deg, #FFD700 0%, #FFA500 100%);
  box-shadow: 0 6rpx 20rpx rgba(255, 165, 0, 0.4);
}

.secondary-btn {
  background: linear-gradient(135deg, #FF6B6B 0%, #EE5A5A 100%);
  box-shadow: 0 6rpx 20rpx rgba(238, 90, 90, 0.4);
}

.btn-text {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
}

.highlight-text {
  font-size: 40rpx;
  color: #C41E3A;
  font-weight: 700;
  margin: 0 4rpx;
}

.hot-badge {
  position: absolute;
  top: -12rpx;
  right: -12rpx;
  background: #FFD700;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
  transform: rotate(15deg);
}

.hot-text {
  font-size: 18rpx;
  font-weight: 700;
  color: #C41E3A;
}

/* 使用流程 */
.process-section {
  margin: 32rpx;
  padding: 32rpx;
  background: #FFF;
  border-radius: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
}

.process-grid {
  display: flex;
  justify-content: space-between;
  margin-bottom: 24rpx;
}

.process-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
  padding: 16rpx;
}

.process-icon {
  width: 96rpx;
  height: 96rpx;
  background: linear-gradient(135deg, #F5F0E8 0%, #E8E0D5 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 16rpx;
}

.icon-text {
  font-size: 48rpx;
}

.step-label {
  font-size: 20rpx;
  color: #999;
  margin-bottom: 8rpx;
}

.step-title {
  font-size: 24rpx;
  color: #333;
  font-weight: 500;
  line-height: 1.3;
}

.rights-section {
  padding-top: 24rpx;
  border-top: 1px dashed #E0D5C5;
}

.rights-content {
  padding: 20rpx;
  background: linear-gradient(90deg, rgba(139, 69, 19, 0.08) 0%, rgba(139, 69, 19, 0.03) 100%);
  border-radius: 12rpx;
  border-left: 6rpx solid #8B4513;
}

.rights-text {
  font-size: 26rpx;
  color: #555;
  line-height: 1.6;
}

.highlight-red {
  color: #C41E3A;
  font-weight: 600;
}

.highlight-teal {
  color: #008B8B;
  font-weight: 600;
}

/* 底部操作按钮 */
.bottom-actions {
  display: flex;
  gap: 20rpx;
  padding: 24rpx 32rpx;
  margin-top: 8rpx;
}

.action-btn-outline {
  display: flex;
  align-items: center;
  justify-content: center;
  flex: 1;
  height: 88rpx;
  border: 2rpx solid #8B4513;
  border-radius: 16rpx;
  background: transparent;
}

.outline-icon {
  font-size: 28rpx;
  margin-right: 8rpx;
}

.outline-text {
  font-size: 28rpx;
  color: #8B4513;
  font-weight: 500;
}

.action-btn-primary {
  display: flex;
  align-items: center;
  justify-content: center;
  flex: 2;
  height: 88rpx;
  background: linear-gradient(135deg, #8B4513 0%, #A0522D 100%);
  border-radius: 16rpx;
}

.primary-text {
  font-size: 30rpx;
  color: #FFF;
  font-weight: 600;
}

.primary-arrow {
  font-size: 28rpx;
  color: #FFD700;
  margin-left: 8rpx;
}

/* 景区列表 */
.scenic-section {
  margin: 24rpx 32rpx;
  padding: 24rpx;
  background: #FFF;
  border-radius: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.header-left {
  display: flex;
  align-items: center;
}

.header-dot {
  width: 12rpx;
  height: 12rpx;
  background: #8B4513;
  border-radius: 50%;
  margin-right: 12rpx;
}

.header-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.header-right {
  display: flex;
  align-items: center;
}

.header-link {
  font-size: 24rpx;
  color: #8B4513;
}

.header-arrow {
  font-size: 24rpx;
  color: #8B4513;
  margin-left: 4rpx;
}

.scenic-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}

.scenic-card {
  position: relative;
  width: 100%;
  height: 280rpx;
  border-radius: 16rpx;
  overflow: hidden;
}

.scenic-image {
  width: 100%;
  height: 100%;
}

.scenic-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(180deg, rgba(0,0,0,0.1) 0%, rgba(0,0,0,0.6) 100%);
}

.scenic-content {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 20rpx;
}

.scenic-title {
  display: block;
  font-size: 30rpx;
  font-weight: 600;
  color: #FFF;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.4);
  margin-bottom: 12rpx;
}

.scenic-btn {
  display: inline-flex;
  align-items: center;
  padding: 8rpx 20rpx;
  background: linear-gradient(135deg, #FFD700 0%, #FFA500 100%);
  border-radius: 20rpx;
}

.scenic-btn .btn-text {
  font-size: 22rpx;
  color: #333;
  font-weight: 600;
}
