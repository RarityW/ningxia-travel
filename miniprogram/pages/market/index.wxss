/* 宁夏旅游门票优惠 - 重新设计样式 */
page {
  background: linear-gradient(180deg, #F5F0E8 0%, #FFF8F0 100%);
}

.container {
  min-height: 100vh;
  padding-bottom: 60rpx;
}

/* Hero区域 - 优化渐变 */
.hero-section {
  position: relative;
  padding: 40rpx 32rpx 32rpx;
  background: linear-gradient(135deg, #B8860B 0%, #DAA520 50%, #C1703D 100%);
  box-shadow: 0 8rpx 32rpx rgba(184, 134, 11, 0.3);
}

/* 顶部导航 */
.top-nav {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 32rpx;
}

.nav-left {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.nav-icon {
  font-size: 44rpx;
}

.nav-title {
  font-size: 34rpx;
  font-weight: 700;
  color: #FFFFFF;
  letter-spacing: 2rpx;
}

.nav-right {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.nav-dot {
  font-size: 36rpx;
  color: rgba(255, 255, 255, 0.9);
}

.nav-divider {
  width: 2rpx;
  height: 32rpx;
  background: rgba(255, 255, 255, 0.4);
}

.nav-radio {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.9);
}

/* 标题区域 */
.title-section {
  margin-bottom: 28rpx;
}

.main-title {
  display: block;
  font-size: 48rpx;
  font-weight: 800;
  color: #FFFFFF;
  text-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.25);
  line-height: 1.3;
  margin-bottom: 20rpx;
  letter-spacing: 1rpx;
}

.subtitle-badge {
  display: inline-flex;
  background: rgba(255, 255, 255, 0.25);
  border-radius: 40rpx;
  padding: 10rpx 24rpx;
  backdrop-filter: blur(12rpx);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.subtitle-text {
  font-size: 26rpx;
  color: #FFFFFF;
  font-weight: 600;
  white-space: nowrap;
}

/* Hero图片 */
.hero-image-container {
  position: relative;
  width: 100%;
  height: 380rpx;
  border-radius: 28rpx;
  overflow: hidden;
  box-shadow: 0 12rpx 40rpx rgba(0, 0, 0, 0.2);
}

.hero-image {
  width: 100%;
  height: 100%;
}

.image-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(180deg, rgba(0,0,0,0) 0%, rgba(0,0,0,0.5) 100%);
}

.image-badge {
  position: absolute;
  bottom: 24rpx;
  left: 24rpx;
  right: 24rpx;
  padding: 16rpx 24rpx;
  background: rgba(0, 0, 0, 0.4);
  backdrop-filter: blur(20rpx);
  border-radius: 20rpx;
}

.badge-text {
  display: block;
  font-size: 28rpx;
  color: #FFFFFF;
  font-weight: 600;
  text-align: center;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.3);
}

/* 优惠按钮区域 - 统一金色系 */
.action-buttons {
  display: flex;
  gap: 24rpx;
  padding: 0 32rpx;
  margin-top: -48rpx;
  position: relative;
  z-index: 10;
}

.action-btn {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  height: 108rpx;
  border-radius: 24rpx;
  position: relative;
  box-shadow: 0 8rpx 28rpx rgba(0, 0, 0, 0.15);
  transition: transform 0.2s;
}

.primary-btn {
  background: linear-gradient(135deg, #DAA520 0%, #B8860B 100%);
}

.secondary-btn {
  background: linear-gradient(135deg, #C1703D 0%, #A0522D 100%);
}

.btn-text {
  font-size: 32rpx;
  font-weight: 700;
  color: #FFFFFF;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.2);
}

.highlight-text {
  font-size: 44rpx;
  color: #FFD700;
  font-weight: 800;
  margin: 0 6rpx;
}

.hot-badge {
  position: absolute;
  top: -16rpx;
  right: -16rpx;
  background: linear-gradient(135deg, #FFD700 0%, #FFA500 100%);
  padding: 6rpx 16rpx;
  border-radius: 12rpx;
  box-shadow: 0 4rpx 12rpx rgba(255, 165, 0, 0.4);
  transform: rotate(12deg);
}

.hot-text {
  font-size: 20rpx;
  font-weight: 800;
  color: #8B4513;
}

/* 使用流程 - 卡片式设计 */
.process-section {
  margin: 48rpx 32rpx 32rpx;
  padding: 40rpx 32rpx;
  background: #FFFFFF;
  border-radius: 32rpx;
  box-shadow: 0 8rpx 32rpx rgba(139, 115, 85, 0.12);
}

.process-grid {
  display: flex;
  justify-content: space-between;
  gap: 16rpx;
  margin-bottom: 32rpx;
}

.process-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
  padding: 24rpx 16rpx;
  background: linear-gradient(135deg, #FFF8F0 0%, #F5F0E8 100%);
  border-radius: 20rpx;
  border: 2rpx solid #E8E0D5;
  position: relative;
}

.process-icon {
  width: 100rpx;
  height: 100rpx;
  background: linear-gradient(135deg, #DAA520 0%, #B8860B 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 16rpx;
  box-shadow: 0 6rpx 20rpx rgba(184, 134, 11, 0.25);
}

.icon-text {
  font-size: 50rpx;
  filter: drop-shadow(0 2rpx 4rpx rgba(0, 0, 0, 0.1));
}

.step-label {
  font-size: 22rpx;
  color: #B8860B;
  font-weight: 700;
  margin-bottom: 8rpx;
  text-transform: uppercase;
  letter-spacing: 1rpx;
}

.step-title {
  font-size: 26rpx;
  color: #333333;
  font-weight: 600;
  line-height: 1.4;
}

/* 权益说明 */
.rights-section {
  padding-top: 32rpx;
  border-top: 2rpx dashed #DAA520;
}

.rights-content {
  padding: 24rpx 28rpx;
  background: linear-gradient(90deg, rgba(218, 165, 32, 0.08) 0%, rgba(218, 165, 32, 0.02) 100%);
  border-radius: 16rpx;
  border-left: 8rpx solid #DAA520;
}

.rights-text {
  font-size: 28rpx;
  color: #555555;
  line-height: 1.7;
  font-weight: 500;
}

.highlight-red {
  color: #C1703D;
  font-weight: 700;
}

.highlight-teal {
  color: #556B2F;
  font-weight: 700;
}

/* 底部操作按钮 */
.bottom-actions {
  display: flex;
  gap: 24rpx;
  padding: 24rpx 32rpx;
}

.action-btn-outline {
  display: flex;
  align-items: center;
  justify-content: center;
  flex: 1;
  height: 96rpx;
  border: 3rpx solid #DAA520;
  border-radius: 20rpx;
  background: #FFFFFF;
  box-shadow: 0 4rpx 16rpx rgba(218, 165, 32, 0.1);
}

.outline-icon {
  font-size: 32rpx;
  margin-right: 8rpx;
}

.outline-text {
  font-size: 30rpx;
  color: #DAA520;
  font-weight: 700;
}

.action-btn-primary {
  display: flex;
  align-items: center;
  justify-content: center;
  flex: 2;
  height: 96rpx;
  background: linear-gradient(135deg, #8B4513 0%, #A0522D 100%);
  border-radius: 20rpx;
  box-shadow: 0 8rpx 24rpx rgba(139, 69, 19, 0.3);
}

.primary-text {
  font-size: 32rpx;
  color: #FFFFFF;
  font-weight: 700;
  letter-spacing: 1rpx;
}

.primary-arrow {
  font-size: 32rpx;
  color: #FFD700;
  margin-left: 12rpx;
  font-weight: bold;
}

/* 景区列表 */
.scenic-section {
  margin: 24rpx 32rpx 32rpx;
  padding: 32rpx 28rpx;
  background: #FFFFFF;
  border-radius: 32rpx;
  box-shadow: 0 8rpx 32rpx rgba(139, 115, 85, 0.12);
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 28rpx;
}

.header-left {
  display: flex;
  align-items: center;
}

.header-dot {
  width: 16rpx;
  height: 16rpx;
  background: linear-gradient(135deg, #DAA520 0%, #B8860B 100%);
  border-radius: 50%;
  margin-right: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(184, 134, 11, 0.3);
}

.header-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #333333;
}

.header-right {
  display: flex;
  align-items: center;
}

.header-link {
  font-size: 26rpx;
  color: #B8860B;
  font-weight: 600;
}

.header-arrow {
  font-size: 26rpx;
  color: #B8860B;
  margin-left: 6rpx;
  font-weight: bold;
}

.scenic-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 24rpx;
}

.scenic-card {
  position: relative;
  width: 100%;
  height: 300rpx;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 6rpx 20rpx rgba(0, 0, 0, 0.1);
}

.scenic-image {
  width: 100%;
  height: 100%;
}

.scenic-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(180deg, rgba(0,0,0,0) 0%, rgba(0,0,0,0.65) 100%);
}

.scenic-content {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 24rpx 20rpx;
}

.scenic-title {
  display: block;
  font-size: 32rpx;
  font-weight: 700;
  color: #FFFFFF;
  text-shadow: 0 3rpx 10rpx rgba(0, 0, 0, 0.5);
  margin-bottom: 16rpx;
}

.scenic-btn {
  display: inline-flex;
  align-items: center;
  padding: 10rpx 24rpx;
  background: linear-gradient(135deg, #DAA520 0%, #B8860B 100%);
  border-radius: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(184, 134, 11, 0.4);
}

.scenic-btn .btn-text {
  font-size: 24rpx;
  color: #FFFFFF;
  font-weight: 700;
}
