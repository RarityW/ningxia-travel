<!-- 宁夏旅游门票优惠总入口 -->
<view class="container">

  <!-- Hero区域 -->
  <view class="hero-section" style="padding-top: {{statusBarHeight}}px;">
    <!-- 顶部导航栏 -->
    <view class="top-nav">
      <view class="nav-left">
        <text class="nav-icon">🏔️</text>
        <text class="nav-title">一码游宁夏</text>
      </view>
    </view>

    <!-- 主标题区域 -->
    <view class="title-section">
      <text class="main-title">宁夏旅游门票优惠总入口</text>
      <view class="subtitle-badge">
        <text class="subtitle-text">景区联动5折游 · 一站式优惠认证</text>
      </view>
    </view>

    <!-- 特色图片 -->
    <view class="hero-image-container">
      <image class="hero-image" src="{{bannerUrl}}" mode="aspectFill" />
      <view class="image-overlay"></view>
      <view class="image-badge">
        <text class="badge-text">贺兰山 · 沙坡头 · 水洞沟 · 西部影城</text>
      </view>
    </view>
  </view>

  <!-- 优惠按钮区域 -->
  <view class="action-buttons">
    <view class="action-btn primary-btn" bindtap="onDiscountTap">
      <text class="btn-text">凭票根享 <text class="highlight-text">5</text>折</text>
    </view>
    <view class="action-btn secondary-btn" bindtap="onAuthTap">
      <text class="btn-text">免票人群认证</text>
      <view class="hot-badge">
        <text class="hot-text">HOT</text>
      </view>
    </view>
  </view>

  <!-- 使用流程 -->
  <view class="process-section">
    <view class="process-grid">
      <view class="process-item">
        <view class="process-icon">
          <text class="icon-text">🎫</text>
        </view>
        <text class="step-label">Step 01</text>
        <text class="step-title">购买指定景区门票</text>
      </view>

      <view class="process-item">
        <view class="process-icon">
          <text class="icon-text">📱</text>
        </view>
        <text class="step-label">Step 02</text>
        <text class="step-title">现场核销激活优惠</text>
      </view>

      <view class="process-item">
        <view class="process-icon">
          <text class="icon-text">🛒</text>
        </view>
        <text class="step-label">Step 03</text>
        <text class="step-title">获得其他景区5折</text>
      </view>
    </view>

    <!-- 权益说明 -->
    <view class="rights-section">
      <view class="rights-content">
        <text class="rights-text">
          购 <text class="highlight-red">"大美宁夏·风情塞上"</text> 系列景区任一门票<text class="highlight-teal">核销后</text>，即可激活全区 A 级景区 5 折权益。
        </text>
      </view>
    </view>
  </view>

  <!-- 底部操作按钮 -->
  <view class="bottom-actions">
    <view class="action-btn-outline" bindtap="onRulesTap">
      <text class="outline-icon">ℹ️</text>
      <text class="outline-text">活动规则</text>
    </view>
    <view class="action-btn-primary" bindtap="onQueryTap">
      <text class="primary-text">权益资格实时查询</text>
      <text class="primary-arrow">→</text>
    </view>
  </view>

  <!-- 景区列表 -->
  <view class="scenic-section">
    <view class="section-header">
      <view class="header-left">
        <view class="header-dot"></view>
        <text class="header-title">"黄河风情"系列景区</text>
      </view>
      <view class="header-right">
        <text class="header-link">全部景区</text>
        <text class="header-arrow">→</text>
      </view>
    </view>

    <view class="scenic-grid">
      <view class="scenic-card" bindtap="onScenicTap" data-id="1">
        <image class="scenic-image" src="/images/banner-2.jpg" mode="aspectFill" />
        <view class="scenic-overlay"></view>
        <view class="scenic-content">
          <text class="scenic-title">中卫·沙坡头</text>
          <view class="scenic-btn">
            <text class="btn-text">立即购票</text>
          </view>
        </view>
      </view>

      <view class="scenic-card" bindtap="onScenicTap" data-id="2">
        <image class="scenic-image" src="/images/product-1.jpg" mode="aspectFill" />
        <view class="scenic-overlay"></view>
        <view class="scenic-content">
          <text class="scenic-title">镇北堡西部影城</text>
          <view class="scenic-btn">
            <text class="btn-text">立即购票</text>
          </view>
        </view>
      </view>

      <view class="scenic-card" bindtap="onScenicTap" data-id="3">
        <image class="scenic-image" src="/images/product-2.jpg" mode="aspectFill" />
        <view class="scenic-overlay"></view>
        <view class="scenic-content">
          <text class="scenic-title">贺兰山岩画</text>
          <view class="scenic-btn">
            <text class="btn-text">立即购票</text>
          </view>
        </view>
      </view>

      <view class="scenic-card" bindtap="onScenicTap" data-id="4">
        <image class="scenic-image" src="/images/product-3.jpg" mode="aspectFill" />
        <view class="scenic-overlay"></view>
        <view class="scenic-content">
          <text class="scenic-title">水洞沟遗址</text>
          <view class="scenic-btn">
            <text class="btn-text">立即购票</text>
          </view>
        </view>
      </view>
    </view>
  </view>

</view>
