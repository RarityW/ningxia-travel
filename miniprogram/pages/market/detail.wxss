/* 宁夏旅游门票优惠 - 景点详情页样式 */
page {
  background-color: #F5F0E8;
  padding-bottom: 140rpx;
}

.container {
  min-height: 100vh;
}

/* 轮播图 */
.banner-swiper {
  height: 500rpx;
  position: relative;
}

.banner-image {
  width: 100%;
  height: 100%;
}

.back-btn {
  position: fixed;
  top: 88rpx;
  left: 24rpx;
  width: 72rpx;
  height: 72rpx;
  background: rgba(0, 0, 0, 0.4);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 100;
}

.back-icon {
  font-size: 32rpx;
  color: #FFF;
}

.discount-tag {
  position: absolute;
  top: 88rpx;
  right: 24rpx;
  background: linear-gradient(135deg, #FFD700 0%, #FFA500 100%);
  padding: 12rpx 24rpx;
  border-radius: 8rpx;
  z-index: 100;
}

.tag-text {
  font-size: 24rpx;
  font-weight: 600;
  color: #333;
}

/* 景点信息卡片 */
.info-card {
  margin: -40rpx 32rpx 24rpx;
  padding: 32rpx;
  background: #FFF;
  border-radius: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
  position: relative;
}

.scenic-header {
  margin-bottom: 16rpx;
}

.scenic-name {
  font-size: 40rpx;
  font-weight: 700;
  color: #333;
}

.scenic-badges {
  display: flex;
  gap: 12rpx;
  margin-top: 12rpx;
}

.badge {
  padding: 6rpx 16rpx;
  border-radius: 8rpx;
  font-size: 22rpx;
  font-weight: 600;
  color: #FFF;
}

.badge.hot {
  background: linear-gradient(135deg, #FF6B6B 0%, #EE5A5A 100%);
}

.badge.new {
  background: linear-gradient(135deg, #4CAF50 0%, #66BB6A 100%);
}

.scenic-location {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
}

.location-icon {
  font-size: 28rpx;
  margin-right: 8rpx;
}

.location-text {
  font-size: 26rpx;
  color: #666;
}

/* 价格区域 */
.price-section {
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
  padding-top: 24rpx;
  border-top: 1rpx solid #EEE;
}

.price-row {
  display: flex;
  align-items: baseline;
  gap: 16rpx;
}

.discount-price {
  display: flex;
  align-items: baseline;
}

.price-symbol {
  font-size: 28rpx;
  color: #C41E3A;
  font-weight: 600;
}

.price-value {
  font-size: 56rpx;
  font-weight: 700;
  color: #C41E3A;
}

.price-unit {
  font-size: 24rpx;
  color: #999;
  margin-left: 4rpx;
}

.original-price {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.original-label {
  font-size: 24rpx;
  color: #999;
}

.original-value {
  font-size: 28rpx;
  color: #999;
  text-decoration: line-through;
}

.discount-badge {
  background: linear-gradient(135deg, #8B4513 0%, #A0522D 100%);
  padding: 8rpx 16rpx;
  border-radius: 8rpx;
}

.discount-text {
  font-size: 22rpx;
  color: #FFD700;
  font-weight: 600;
}

/* 优惠权益卡片 */
.privilege-card {
  margin: 0 32rpx 24rpx;
  padding: 24rpx;
  background: #FFF;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
}

.card-title {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.title-icon {
  font-size: 32rpx;
  margin-right: 12rpx;
}

.title-text {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
}

.privilege-list {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.privilege-item {
  display: flex;
  align-items: center;
}

.check-icon {
  width: 32rpx;
  height: 32rpx;
  background: linear-gradient(135deg, #4CAF50 0%, #66BB6A 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 18rpx;
  color: #FFF;
  margin-right: 12rpx;
}

.privilege-text {
  font-size: 26rpx;
  color: #555;
}

/* 景点介绍卡片 */
.intro-card {
  margin: 0 32rpx 24rpx;
  padding: 24rpx;
  background: #FFF;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
}

.intro-text {
  font-size: 26rpx;
  color: #555;
  line-height: 1.8;
}

/* 营业时间卡片 */
.hours-card {
  margin: 0 32rpx 24rpx;
  padding: 24rpx;
  background: #FFF;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
}

.hours-info {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.hours-text {
  font-size: 26rpx;
  color: #333;
}

.hours-notice {
  font-size: 24rpx;
  color: #999;
}

/* 底部操作栏 */
.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 120rpx;
  background: #FFF;
  display: flex;
  align-items: center;
  padding: 0 24rpx;
  box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.1);
  z-index: 1000;
}

.service-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 0 24rpx;
}

.service-icon {
  font-size: 36rpx;
}

.service-text {
  font-size: 20rpx;
  color: #666;
}

.price-display {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  padding-right: 24rpx;
}

.display-label {
  font-size: 22rpx;
  color: #999;
}

.display-price {
  font-size: 36rpx;
  font-weight: 700;
  color: #C41E3A;
}

.buy-btn {
  width: 280rpx;
  height: 88rpx;
  background: linear-gradient(135deg, #FFD700 0%, #FFA500 100%);
  border-radius: 44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 16rpx rgba(255, 165, 0, 0.3);
}

.buy-btn:active {
  transform: scale(0.98);
}

.btn-text {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
}

/* 加载状态 */
.loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 200rpx 40rpx;
}

.spinner {
  width: 60rpx;
  height: 60rpx;
  border: 6rpx solid #E0D5C5;
  border-top-color: #8B4513;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 24rpx;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

.loading text {
  font-size: 28rpx;
  color: #999;
}

/* 空状态 */
.empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 200rpx 40rpx;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 24rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}
