/* 宁夏旅游门票优惠 - 景点详情页样式 */
page {
  background-color: #F8F8F8;
  padding-bottom: 140rpx;
}

.container {
  min-height: 100vh;
}

/* 1. 商品图轮播 */
.product-swiper {
  width: 100%;
  height: 750rpx; /* 1:1 Aspect Ratio */
  background: #fff;
}

.product-image {
  width: 100%;
  height: 100%;
}

/* 2. 标头区域 (价格/标题/券) */
.product-header {
  background: #fff;
  padding: 24rpx 32rpx;
  margin-bottom: 20rpx;
}

.price-row {
  display: flex;
  align-items: baseline;
  margin-bottom: 16rpx;
}

.currency {
  font-size: 32rpx;
  color: #FF2D2D; /* Red */
  font-weight: bold;
}

.price {
  font-size: 56rpx;
  color: #FF2D2D;
  font-weight: bold;
  margin-right: 16rpx;
}

.original-price {
  font-size: 26rpx;
  color: #999;
  text-decoration: line-through;
}

.title-row {
  margin-bottom: 24rpx;
}

.product-title {
  font-size: 34rpx;
  font-weight: bold;
  color: #333;
  line-height: 1.4;
}

/* 优惠券Banner */
.coupon-banner {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: linear-gradient(90deg, #FFF5E6 0%, #FFE4C4 100%); /* Gold/Light Orange */
  padding: 16rpx 24rpx;
  border-radius: 12rpx;
}

.coupon-left {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.coupon-label {
  font-size: 24rpx;
  color: #FF6600;
  font-weight: bold;
}

.coupon-text {
  font-size: 22rpx;
  color: #FF6600;
  border: 1rpx solid #FF6600;
  padding: 2rpx 8rpx;
  border-radius: 4rpx;
  margin-left: 12rpx;
}

.coupon-right {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #FF6600;
  font-weight: bold;
}

/* 3. 规格选择 & 服务 (通用Cell样式) */
.spec-cell, .service-cell {
  background: #fff;
  padding: 32rpx;
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.service-cell {
  justify-content: flex-start;
  gap: 24rpx;
}

.cell-label {
  font-size: 28rpx;
  color: #999;
  margin-right: 24rpx;
}

.cell-value {
  flex: 1;
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.cell-arrow {
  font-size: 32rpx;
  color: #CCCCCC;
}

.service-item {
  display: flex;
  align-items: center;
  gap: 8rpx;
  font-size: 24rpx;
  color: #666;
}

.check-icon {
  color: #FF6600;
  margin-right: 4rpx;
}

/* 5. 详情内容 */
.detail-content {
  background: #fff;
  padding: 32rpx;
  padding-bottom: 200rpx; /* Space for bottom bar covers this */
}

.section-title {
  text-align: center;
  font-size: 28rpx;
  color: #999;
  margin-bottom: 32rpx;
  position: relative;
}

.section-title::before, .section-title::after {
  content: "";
  display: inline-block;
  width: 40rpx;
  height: 1rpx;
  background: #ddd;
  vertical-align: middle;
  margin: 0 16rpx;
}

.intro-text {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
  margin-bottom: 24rpx;
  display: block;
}

.detail-image {
  width: 100%;
  display: block;
  margin-bottom: 0;
}

/* 底部操作栏 (电商风格) */
.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 100rpx;
  background: #fff;
  display: flex;
  align-items: center;
  box-shadow: 0 -2rpx 10rpx rgba(0,0,0,0.05);
  padding-bottom: env(safe-area-inset-bottom);
  z-index: 999;
}

.icon-btn {
  width: 100rpx;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size: 20rpx;
  color: #666;
}

.icon {
  font-size: 40rpx;
  margin-bottom: 4rpx;
}

.shop-icon-img {
  width: 44rpx;
  height: 44rpx;
  border-radius: 50%;
  margin-bottom: 4rpx;
  border: 1rpx solid #eee;
}

.action-btn-group {
  flex: 1;
  display: flex;
  height: 76rpx;
  margin-right: 24rpx;
  margin-left: 10rpx;
  border-radius: 38rpx;
  overflow: hidden;
}

.action-btn {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  color: #fff;
  font-weight: bold;
}

.add-cart {
  background: linear-gradient(90deg, #FFCD00, #FFAB00); /* Yellow/Orange */
  color: #333;
}

.buy-now {
  background: linear-gradient(90deg, #FF7700, #FF4400); /* Red/Orange */
}

/* 加载状态 */
.loading {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #999;
  font-size: 28rpx;
}

.spinner {
  width: 60rpx;
  height: 60rpx;
  border: 6rpx solid #eee;
  border-top-color: #FF6600;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

@keyframes spin {
  from { transform: rotate(0deg); }
  to { transform: rotate(360deg); }
}

.empty {
  text-align: center;
  padding-top: 200rpx;
  color: #999;
}
