.container {
  min-height: 100vh;
  background-color: #F8F8F8;
  padding-bottom: 40rpx;
}

.loading-state, .empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding-top: 200rpx;
}

.empty-text {
  margin-top: 20rpx;
  color: #999;
  font-size: 28rpx;
}

.order-list {
  padding: 24rpx;
}

.order-card {
  background: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.02);
}

.order-header {
  display: flex;
  justify-content: space-between;
  border-bottom: 1rpx solid #f0f0f0;
  padding-bottom: 20rpx;
  margin-bottom: 20rpx;
}

.order-no {
  font-size: 24rpx;
  color: #666;
}

.order-status {
  font-size: 26rpx;
  font-weight: bold;
}
.status-0 { color: #ff9900; } /* 待支付 */
.status-1 { color: #07c160; } /* 已支付 */
.status-2 { color: #1890ff; } /* 已发货 */
.status-3 { color: #333; }    /* 已完成 */
.status-4 { color: #999; }    /* 已取消 */

.product-item {
  display: flex;
  margin-bottom: 20rpx;
}

.product-img {
  width: 120rpx;
  height: 120rpx;
  border-radius: 8rpx;
  background: #f5f5f5;
  margin-right: 20rpx;
}

.product-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.product-name {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 12rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.product-meta {
  display: flex;
  justify-content: space-between;
}

.product-price {
  color: #B8860B;
  font-weight: bold;
}

.product-qty {
  color: #999;
  font-size: 24rpx;
}

.order-footer {
  display: flex;
  justify-content: flex-end;
  align-items: center;
  border-top: 1rpx solid #f0f0f0;
  padding-top: 20rpx;
  margin-top: 10rpx;
}

.total-price {
  font-size: 28rpx;
  font-weight: bold;
  margin-right: 20rpx;
}

.action-btn {
  padding: 10rpx 24rpx;
  background: #B8860B;
  color: #fff;
  border-radius: 30rpx;
  font-size: 26rpx;
  margin-left: 16rpx;
}

.action-btn.outline {
  background: #fff;
  color: #666;
  border: 1rpx solid #ccc;
}
