/* 美食列表页面样式 - 大漠古韵风 */
.category-scroll {
  position: sticky;
  top: 0;
  background-color: var(--card-white);
  white-space: nowrap;
  padding: 20rpx 0;
  z-index: 100;
  box-shadow: 0 2rpx 8rpx rgba(184, 134, 11, 0.06);
}

.category-list {
  display: inline-block;
  padding: 0 20rpx;
}

.category-item {
  display: inline-block;
  padding: 12rpx 28rpx;
  margin-right: 16rpx;
  background-color: var(--bg-sand-light);
  border-radius: 30rpx;
  font-size: 26rpx;
  color: var(--text-warm);
  transition: all 0.3s;
}

.category-item.active {
  background: var(--gradient-terracotta);
  color: var(--card-white);
  box-shadow: 0 4rpx 12rpx rgba(193, 112, 61, 0.25);
}

.food-list {
  margin-top: 20rpx;
  padding: 0 24rpx;
}

.food-item {
  display: flex;
  background-color: var(--card-white);
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  padding: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(184, 134, 11, 0.08);
  transition: all 0.3s;
}

.food-item:active {
  transform: scale(0.98);
  opacity: 0.8;
}

.food-image {
  width: 240rpx;
  height: 180rpx;
  border-radius: 12rpx;
  background-color: var(--bg-sand-light);
  flex-shrink: 0;
}

.food-info {
  flex: 1;
  margin-left: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.food-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.food-name {
  font-size: 32rpx;
  font-weight: bold;
  color: var(--text-deep);
  flex: 1;
}

.category-tag {
  padding: 4rpx 12rpx;
  background: var(--gradient-olive);
  border-radius: 6rpx;
  font-size: 22rpx;
  color: var(--card-white);
  font-weight: bold;
  margin-left: 16rpx;
}

.food-meta {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 8rpx;
}

.region {
  font-size: 24rpx;
  color: var(--text-muted);
}

.rating {
  display: flex;
  align-items: center;
}

.star {
  font-size: 24rpx;
  color: var(--primary-gold-light);
  margin-right: 4rpx;
}

.score {
  font-size: 24rpx;
  color: var(--secondary-olive);
  font-weight: bold;
  margin-right: 4rpx;
}

.views {
  font-size: 22rpx;
  color: var(--text-muted);
}

.food-description {
  font-size: 24rpx;
  color: var(--text-warm);
  margin-top: 8rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.food-footer {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 8rpx;
}

.price {
  font-size: 32rpx;
  color: var(--primary-gold);
  font-weight: bold;
}

.shops {
  font-size: 22rpx;
  color: var(--text-muted);
}

.recommend-tag {
  display: inline-block;
  padding: 4rpx 12rpx;
  background: linear-gradient(135deg, #ff6b6b, #ee5a24);
  border-radius: 6rpx;
  font-size: 20rpx;
  color: #fff;
  font-weight: bold;
}

.loading {
  text-align: center;
  padding: 40rpx;
  color: var(--text-muted);
}

.empty {
  text-align: center;
  padding: 80rpx 40rpx;
  color: var(--text-muted);
}
.empty-icon {
  font-size: 120rpx;
  margin-bottom: 24rpx;
}
