/* pages/shop/index.wxss */
page {
  background-color: #F8F8F8; /* Light Grey background */
}

.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
}

/* 搜索栏 */
.shop-header {
  padding: 12rpx 24rpx;
  background: #fff;
  z-index: 100;
}

.search-bar {
  background: #F2F2F2;
  height: 72rpx;
  border-radius: 36rpx;
  display: flex;
  align-items: center;
  padding: 0 24rpx;
}

.search-icon {
  font-size: 28rpx;
  margin-right: 12rpx;
}

.search-voice-icon {
  font-size: 28rpx;
  color: #999;
}

.search-input {
  flex: 1;
  font-size: 26rpx;
  color: #333;
}

.placeholder-text {
  color: #666; /* Darker placeholder to match image */
}

/* 滚动区域 */
.main-scroll {
  flex: 1;
  height: 0;
}

.scroll-content {
  padding-bottom: 40rpx;
}

/* Banner区域 */
.banner-section {
  position: relative;
  height: 360rpx;
  width: 100%;
}

.banner-swiper {
  width: 100%;
  height: 100%;
}

.banner-fallback {
  position: relative;
  width: 100%;
  height: 100%;
}

.banner-img {
  width: 100%;
  height: 100%;
  border-radius: 0 0 40rpx 40rpx; /* Bottom rounded corners like image could have */
}

.banner-text-overlay {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0,0,0,0.3); /* Darken for text readability */
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  color: #fff;
}

.banner-title {
  font-size: 48rpx;
  font-weight: bold;
  letter-spacing: 2rpx;
  margin-bottom: 24rpx;
  text-shadow: 0 2rpx 4rpx rgba(0,0,0,0.5);
}

.banner-tags {
  display: flex;
  gap: 16rpx;
  margin-bottom: 24rpx;
}

.banner-tag {
  background: #B22222; /* Firebrick Red */
  color: #fff;
  font-size: 20rpx;
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
}

.banner-subtitle {
  font-size: 22rpx;
  opacity: 0.9;
}

/* 快捷入口 */
.quick-entry-row {
  display: flex;
  justify-content: space-between;
  padding: 24rpx;
  margin-top: -40rpx; /* Overlap banner */
  position: relative;
  z-index: 10;
}

.quick-card {
  width: 48%;
  background: #fff;
  border-radius: 20rpx;
  padding: 24rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.05);
}

.quick-text {
  display: flex;
  flex-direction: column;
}

.quick-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 4rpx;
}

.quick-sub {
  font-size: 22rpx;
  color: #999;
}

.quick-icon {
  width: 80rpx;
  height: 80rpx;
}

/* 广告Banner */
.ad-banner {
  margin: 24rpx;
  height: 180rpx;
  border-radius: 20rpx;
  overflow: hidden;
  position: relative;
  background: #FFD700; /* Fallback yellow */
}

.ad-bg {
  width: 100%;
  height: 100%;
  opacity: 0.8;
}

.ad-content {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  padding-left: 40rpx;
  z-index: 2;
}

.ad-title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
  font-style: italic; /* Dynamic look */
}

.ad-sub {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 16rpx;
  font-weight: bold;
}

.ad-btn {
  background: #fff;
  color: #333;
  font-size: 20rpx;
  padding: 4rpx 16rpx;
  border-radius: 20rpx;
  width: fit-content;
}

/* 服务标签 */
.service-tags {
  display: flex;
  justify-content: center;
  align-items: center;
  flex-wrap: wrap;
  padding: 20rpx;
  background: #FFF8E7; /* Light Gold BG */
  margin: 0 24rpx 24rpx;
  border-radius: 12rpx;
}

.service-tag {
  font-size: 22rpx;
  color: #D4AF37; /* Metallic Gold */
}

.service-divider {
  font-size: 20rpx;
  color: #EEDD82;
  margin: 0 8rpx;
}

/* Tabs */
.tab-header {
  display: flex;
  padding: 0 24rpx;
  margin-bottom: 24rpx;
}

.tab-item {
  margin-right: 40rpx;
  font-size: 30rpx;
  color: #666;
  padding-bottom: 8rpx;
}

.tab-item.active {
  color: #FF8C00; /* Dark Orange */
  font-weight: bold;
  border-bottom: 4rpx solid #FF8C00;
}

/* 特色产品Banner */
.feature-product-banner {
  margin: 0 24rpx 24rpx;
  height: 120rpx;
  background: linear-gradient(90deg, #FF6347, #FF4500); /* Orange Red gradient */
  border-radius: 12rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #fff;
  font-size: 32rpx;
  font-weight: bold;
  box-shadow: 0 4rpx 12rpx rgba(255, 69, 0, 0.3);
}

/* 商品列表 */
.product-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
  padding: 0 24rpx;
}

.product-card {
  background: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.05);
}

.image-wrapper {
  width: 100%;
  height: 300rpx;
  background: #f5f5f5;
}

.product-img {
  width: 100%;
  height: 100%;
}

.product-info {
  padding: 16rpx;
}

.product-name {
  font-size: 26rpx;
  color: #333;
  margin-bottom: 12rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.product-bottom {
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
}

.price-box {
  color: #FF4500;
}

.currency {
  font-size: 24rpx;
}

.price {
  font-size: 32rpx;
  font-weight: bold;
}

.sales-text {
  font-size: 22rpx;
  color: #999;
}

.original-price {
  font-size: 22rpx;
  color: #999;
  text-decoration: line-through;
  margin-left: 8rpx;
}

/* 底部Tab栏 */
.bottom-tab-bar {
  height: 110rpx;
  background: #fff;
  border-top: 1rpx solid #eee;
  display: flex;
  align-items: center;
  padding-bottom: env(safe-area-inset-bottom);
  position: fixed;
  bottom: 0;
  width: 100%;
  z-index: 999;
}

.tab-btn {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.tab-btn.active .tab-icon, .tab-btn.active .tab-text {
  color: #FF0000; /* Red active state */
}

.tab-icon {
  font-size: 40rpx;
  margin-bottom: 4rpx;
}

.tab-text {
  font-size: 20rpx;
  color: #666;
}
