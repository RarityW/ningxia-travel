.container {
  min-height: 100vh;
  background-color: #F8F8F8;
  box-sizing: border-box;
}

.form-group {
  background: white;
  margin-top: 20rpx;
  padding: 0 30rpx;
}

.form-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #EEEEEE;
  font-size: 30rpx;
}

.form-item:last-child {
  border-bottom: none;
}

.label {
  color: #333;
  width: 150rpx;
}

.input {
  flex: 1;
  text-align: right;
  color: #333;
}

.input.disabled {
  color: #999;
}

.avatar-item {
  padding: 20rpx 0;
}

.avatar-wrapper {
  background: none;
  padding: 0;
  margin: 0;
  border: none;
  display: flex;
  align-items: center;
  justify-content: flex-end;
  /* Reset default button styles */
  line-height: normal;
  border-radius: 0;
}
.avatar-wrapper::after {
  border: none;
}

.avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background: #eee;
}

.camera-icon {
  position: absolute;
  right: 0;
  bottom: 0;
  background: rgba(0,0,0,0.5);
  color: white;
  font-size: 20rpx;
  padding: 4rpx;
  border-radius: 4rpx;
}

.save-btn {
  width: 90%;
  margin: 60rpx auto;
  background: #B8860B; /* Gold theme */
  color: white;
  border-radius: 44rpx;
  font-weight: 500;
  font-size: 32rpx;
}
.save-btn:active {
  opacity: 0.9;
}
