/* 文化详情页面样式 */
page {
  background-color: var(--bg-cream);
}

.banner-swiper {
  width: 100%;
  height: 400rpx;
  background-color: var(--bg-soft);
}

.banner-image {
  width: 100%;
  height: 100%;
}

.info-card {
  padding: 32rpx;
}

.header {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
}

.name {
  font-size: 40rpx;
  font-weight: bold;
  color: var(--text-dark);
  flex: 1;
}

.category-tag {
  padding: 8rpx 16rpx;
  background: linear-gradient(135deg, var(--primary-green), var(--primary-light));
  border-radius: 8rpx;
  font-size: 24rpx;
  color: var(--card-white);
  font-weight: bold;
  margin-left: 16rpx;
}

.meta {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  margin-bottom: 24rpx;
}

.meta-item {
  display: flex;
  align-items: center;
  font-size: 26rpx;
  color: var(--text-dark);
}

.icon {
  font-size: 28rpx;
  margin-right: 12rpx;
}

.rating-box {
  display: flex;
  align-items: center;
  padding-top: 20rpx;
  border-top: 1rpx solid var(--border-light);
}

.star {
  font-size: 32rpx;
  color: var(--sand-yellow);
  margin-right: 8rpx;
}

.score {
  font-size: 32rpx;
  color: var(--primary-green);
  font-weight: bold;
  margin-right: 16rpx;
}

.views {
  font-size: 24rpx;
  color: var(--text-gray);
}

.price-card {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 32rpx;
}

.price-label {
  font-size: 28rpx;
  color: var(--text-gray);
}

.price-value {
  font-size: 48rpx;
  color: var(--primary-green);
  font-weight: bold;
}

.price-value-free {
  font-size: 32rpx;
  color: var(--primary-light);
  font-weight: bold;
}

.desc-card {
  padding: 32rpx;
  margin-bottom: 120rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: var(--text-dark);
  margin-bottom: 20rpx;
}

.desc-text {
  font-size: 28rpx;
  color: #666666;
  line-height: 1.8;
}

.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 20rpx 32rpx;
  background-color: #FFFFFF;
  box-shadow: 0 -4rpx 16rpx rgba(0, 0, 0, 0.08);
}

.action-btn {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 80rpx;
  border-radius: 8rpx;
  background-color: #F5F5F5;
  transition: all 0.3s;
}

.action-btn:active {
  opacity: 0.8;
}

.btn-icon {
  font-size: 32rpx;
  margin-bottom: 4rpx;
}

.btn-text {
  font-size: 24rpx;
  color: #666666;
}

.loading {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100vh;
  color: #999999;
  font-size: 28rpx;
}
