<!-- 宁夏文旅 - 首页 -->
<view class="container">

  <!-- 【1】固定顶部Header（位置+天气+搜索） -->
  <view class="fixed-header" style="padding-top: {{statusBarHeight}}px;">
    <view class="header-top">
      <view class="location-section">
        <text class="location-text">{{currentLocation}}</text>
        <view class="weather-info">
          <text class="temperature">{{temperature}}</text>
        </view>
      </view>

    </view>

    <!-- 搜索框 -->
    <view class="search-section">
      <view class="search-box" bindtap="onSearchTap">
        <text class="search-icon">🔍</text>
        <view class="search-input placeholder">景区 / 酒店 / 路线 / 美食</view>
        <text class="voice-icon">🎤</text>
      </view>
    </view>
  </view>

  <!-- 【2】首页 Banner 区 -->
  <view class="banner-section">
    <swiper class="banner-swiper" indicator-dots indicator-color="rgba(255,255,255,0.5)" indicator-active-color="#FFFFFF" autoplay circular>
      <block wx:for="{{banners}}" wx:key="id">
        <swiper-item>
          <view class="banner-slide">
            <image class="banner-image" src="{{item.imageUrl}}" mode="aspectFill" />
            <view class="banner-content">
              <text class="banner-slogan">{{item.title}}</text>
            </view>
          </view>
        </swiper-item>
      </block>
    </swiper>
  </view>

  <!-- 【3】功能入口宫格（10个功能） -->
  <view class="function-section">
    <view class="function-grid">
      <!-- 第一行 -->
      <view class="function-item" bindtap="onFunctionTap" data-page="attractions">
        <view class="function-icon-bg bg-orange">
          <text class="function-icon">🎫</text>
        </view>
        <text class="function-name">景区门票</text>
      </view>

      <view class="function-item" bindtap="onFunctionTap" data-page="hotels">
        <view class="function-icon-bg bg-blue">
          <text class="function-icon">🏨</text>
        </view>
        <text class="function-name">酒店民宿</text>
      </view>

      <view class="function-item" bindtap="onFunctionTap" data-page="routes">
        <view class="function-icon-bg bg-green">
          <text class="function-icon">🗺️</text>
        </view>
        <text class="function-name">线路定制</text>
      </view>

      <view class="function-item" bindtap="onFunctionTap" data-page="products">
        <view class="function-icon-bg bg-purple">
          <text class="function-icon">🎁</text>
        </view>
        <text class="function-name">宁夏特产</text>
      </view>

      <view class="function-item" bindtap="onFunctionTap" data-page="food">
        <view class="function-icon-bg bg-red">
          <text class="function-icon">🍽️</text>
        </view>
        <text class="function-name">地道美食</text>
      </view>

      <!-- 第二行 -->
      <view class="function-item" bindtap="onFunctionTap" data-page="shows">
        <view class="function-icon-bg bg-pink">
          <text class="function-icon">🎭</text>
        </view>
        <text class="function-name">演艺活动</text>
      </view>

      <view class="function-item" bindtap="onFunctionTap" data-page="tours">
        <view class="function-icon-bg bg-cyan">
          <text class="function-icon">👥</text>
        </view>
        <text class="function-name">跟团游</text>
      </view>

      <view class="function-item" bindtap="onFunctionTap" data-page="bus">
        <view class="function-icon-bg bg-yellow">
          <text class="function-icon">🚌</text>
        </view>
        <text class="function-name">直通车</text>
      </view>

      <view class="function-item" bindtap="onFunctionTap" data-page="service">
        <view class="function-icon-bg bg-indigo">
          <text class="function-icon">💬</text>
        </view>
        <text class="function-name">出行服务</text>
      </view>

      <view class="function-item" bindtap="onFunctionTap" data-page="daytrip">
        <view class="function-icon-bg bg-emerald">
          <text class="function-icon">📅</text>
        </view>
        <text class="function-name">一日游</text>
      </view>
    </view>
  </view>

  <!-- 【4】公告条 -->
  <view class="notice-section">
    <view class="notice-box">
      <view class="notice-left">
        <text class="notice-icon">📢</text>
        <text class="notice-label">Notice</text>
      </view>
      <view class="notice-divider"></view>
      <text class="notice-text">宁夏旅游咨询投诉热线：12345 欢迎咨询</text>
      <text class="notice-arrow">›</text>
    </view>
  </view>

  <!-- 【新增】宁选好礼 - 特产分类入口 -->
  <view class="shop-entry-section">
    <view class="section-header">
      <view class="header-left">
        <text class="section-title">宁选好礼</text>
        <view class="new-badge">
          <text class="new-text">OFFICIAL</text>
        </view>
      </view>
      <view class="header-right" bindtap="goToShop" data-id="0">
        <text class="more-text">更多好物</text>
        <text class="more-arrow">→</text>
      </view>
    </view>
    
    <scroll-view class="shop-categories" scroll-x="true" show-scrollbar="false">
      <view class="category-list">
        <!-- 动态生成分类卡片 -->
        <block wx:for="{{shopCategories}}" wx:key="id">
          <view class="category-card" bindtap="goToShop" data-id="{{index}}">
            <view class="category-icon-bg" style="background: {{item.color}}">
              <text class="category-icon">{{item.icon}}</text>
            </view>
            <text class="category-name">{{item.name}}</text>
          </view>
        </block>
      </view>
    </scroll-view>
  </view>

  <!-- 【5】Banner区域 - 景区门票优惠 -->
  <view class="banner-section">
    <view class="banner-card" bindtap="goToDiscount">
      <view class="banner-header">
        <view class="banner-content">
          <text class="banner-title">宁夏景区门票\n优惠总入口</text>
          <text class="banner-subtitle">一站式购票 享官方补贴</text>
        </view>
        <view class="banner-decoration">
          <text class="decoration-icon">🏔️</text>
        </view>
      </view>

      <view class="banner-features">
        <view class="feature-item">
          <view class="feature-icon bg-yellow">
            <text class="feature-icon-text">🎫</text>
          </view>
          <view class="feature-content">
            <text class="feature-title">票根优惠</text>
            <text class="feature-desc">景区联动5折起</text>
          </view>
        </view>

        <view class="feature-divider"></view>

        <view class="feature-item">
          <view class="feature-icon bg-blue">
            <text class="feature-icon-text">🎓</text>
          </view>
          <view class="feature-content">
            <text class="feature-title">免票人群</text>
            <text class="feature-desc">军人、老师等免费</text>
          </view>
        </view>
      </view>
    </view>
  </view>

  <!-- 【6】当季热玩 - 横向滚动产品 -->
  <view class="hot-section">
    <view class="section-header">
      <view class="header-left">
        <text class="section-title">当季热玩</text>
        <view class="new-badge">
          <text class="new-text">HOT</text>
        </view>
      </view>

      <scroll-view class="category-tabs" scroll-x="true" show-scrollbar="false">
        <block wx:for="{{hotTabs}}" wx:key="*this">
          <view class="tab-item {{currentHotTab === index ? 'active' : ''}}" bindtap="onHotTabChange" data-index="{{index}}">
            {{item}}
          </view>
        </block>
      </scroll-view>
    </view>

    <scroll-view class="products-scroll" scroll-x="true" show-scrollbar="false">
      <view class="products-container">
        <block wx:for="{{hotAttractions}}" wx:key="id">
          <view class="product-card-large" bindtap="goToAttractionDetail" data-id="{{item.id}}">
            <image class="product-image-large" src="{{item.coverImage}}" mode="aspectFill" />
            <view class="product-badge">
              <text class="badge-text">{{item.grade || '热门'}}</text>
            </view>
            <view class="product-info-large">
              <text class="product-title">{{item.name}}</text>
              <view class="product-price-large">
                <text class="price-symbol">¥</text>
                <text class="price-amount">{{item.ticketPrice}}</text>
                <text class="price-unit">起</text>
              </view>
            </view>
          </view>
        </block>
      </view>
    </scroll-view>

  </view>

  <!-- 【7】榜单卡片 -->




</view>
