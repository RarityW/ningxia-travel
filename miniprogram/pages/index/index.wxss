/* 宁夏文旅 - 首页样式 - 大漠古韵风 */
page {
  background: var(--bg-warm-cream);
  min-height: 100vh;
}

.container {
  padding-bottom: 120rpx; /* 为底部导航留空间 */
}

/* 【1】固定顶部Header */
.fixed-header {
  position: sticky;
  top: 0;
  z-index: 1000;
  background: var(--gradient-gold);
  position: relative;
  overflow: hidden;
}

.fixed-header::before {
  content: '';
  position: absolute;
  top: 0;
  right: 0;
  width: 200rpx;
  height: 120rpx;
  background: linear-gradient(45deg, rgba(255,255,255,0.1) 0%, rgba(255,255,255,0.05) 100%);
  border-radius: 50%;
  transform: translate(50rpx, -50rpx);
}

/* 【2】固定搜索区 */
.fixed-search-section {
  position: sticky;
  top: 0;
  z-index: 1000;
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20rpx);
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.05);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
  padding: 16rpx 32rpx;
  margin-top: -1rpx; /* 消除border重叠 */
}

.header-section::before {
  content: '';
  position: absolute;
  top: 0;
  right: 0;
  width: 200rpx;
  height: 120rpx;
  background: linear-gradient(45deg, rgba(255,255,255,0.1) 0%, rgba(255,255,255,0.05) 100%);
  border-radius: 50%;
  transform: translate(50rpx, -50rpx);
}

.header-top {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 24rpx;
  position: relative;
  z-index: 2;
}

.location-section {
  display: flex;
  align-items: center;
  gap: 12rpx;
  padding: 8rpx 32rpx;
}

.location-text {
  font-size: 32rpx;
  font-weight: 600;
  color: #FFFFFF;
  letter-spacing: 1rpx;
}

.weather-info {
  margin-left: 8rpx;
  display: flex;
  align-items: center;
}

.temperature {
  font-size: 26rpx;
  color: rgba(255,255,255,0.95);
  font-weight: 500;
}

.header-right {
  display: flex;
  align-items: center;
  gap: 16rpx;
}



.qr-icon {
  font-size: 40rpx;
  color: #FFFFFF;
}

/* 搜索框 */
.search-box {
  background: rgba(255,255,255,0.95);
  backdrop-filter: blur(20rpx);
  border-radius: 50rpx;
  padding: 16rpx 24rpx;
  display: flex;
  align-items: center;
  gap: 12rpx;
  box-shadow: 0 8rpx 32rpx rgba(0,0,0,0.1);
}

.search-icon {
  font-size: 32rpx;
  color: #9CA3AF;
}

.search-input {
  flex: 1;
  font-size: 28rpx;
  color: #374151;
  border: none;
  background: transparent;
}

.search-input::placeholder {
  color: #9CA3AF;
}

.voice-icon {
  font-size: 32rpx;
  color: #9CA3AF;
}

/* 【5】Banner区域 */
.banner-section {
  margin: 0 32rpx 24rpx;
}

.banner-card {
  background: var(--gradient-sand);
  border-radius: 24rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 32rpx rgba(184, 134, 11, 0.2);
}

.banner-header {
  padding: 40rpx 32rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  position: relative;
}

.banner-content {
  max-width: 400rpx;
}

.banner-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #FFFFFF;
  line-height: 1.4;
  margin-bottom: 8rpx;
  text-shadow: 0 2rpx 8rpx rgba(0,0,0,0.3);
}

.banner-subtitle {
  font-size: 24rpx;
  color: rgba(255,255,255,0.9);
  text-shadow: 0 1rpx 4rpx rgba(0,0,0,0.3);
}

.banner-decoration {
  position: absolute;
  right: 0;
  top: 0;
  bottom: 0;
  width: 200rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  pointer-events: none;
  overflow: hidden;
}

.decoration-icon {
  font-size: 160rpx;
  color: rgba(255,255,255,0.15);
  transform: rotate(-12deg) translateX(20rpx);
}

.banner-features {
  display: flex;
  align-items: center;
  padding: 0 32rpx 32rpx;
  gap: 32rpx;
}

.feature-item {
  display: flex;
  align-items: center;
  gap: 16rpx;
  flex: 1;
}

.feature-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.feature-icon-text {
  font-size: 40rpx;
}

.feature-content {
  flex: 1;
}

.feature-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #FFFFFF;
  display: block;
  margin-bottom: 4rpx;
  text-shadow: 0 1rpx 4rpx rgba(0,0,0,0.3);
}

.feature-desc {
  font-size: 22rpx;
  color: rgba(255,255,255,0.8);
  text-shadow: 0 1rpx 4rpx rgba(0,0,0,0.3);
}

.feature-divider {
  width: 2rpx;
  height: 60rpx;
  background: rgba(255,255,255,0.3);
}

/* 功能图标背景色 */
.bg-yellow { background: rgba(255,255,255,0.2); }
.bg-blue { background: rgba(255,255,255,0.2); }

/* 【3】功能入口宫格 */
.function-section {
  margin: 48rpx 32rpx 24rpx;
  background: #FFFFFF;
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 20rpx rgba(139, 115, 85, 0.08);
}

.function-grid {
  display: grid;
  grid-template-columns: repeat(5, 1fr);
  gap: 24rpx;
}

.function-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
}

.function-icon-bg {
  width: 96rpx;
  height: 96rpx;
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  overflow: hidden;
}

.function-icon-bg::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: inherit;
  opacity: 0.2;
  border-radius: inherit;
}

.function-icon {
  font-size: 48rpx;
  position: relative;
  z-index: 1;
}

/* 功能图标背景色 - 大漠古韵色系 */
.bg-orange { background: rgba(184, 134, 11, 0.1); color: var(--primary-gold); }
.bg-blue { background: rgba(139, 115, 85, 0.1); color: var(--secondary-bronze); }
.bg-green { background: rgba(85, 107, 47, 0.1); color: var(--secondary-olive); }
.bg-purple { background: rgba(193, 112, 61, 0.1); color: var(--primary-terracotta); }
.bg-red { background: rgba(160, 82, 45, 0.1); color: var(--secondary-rust); }
.bg-pink { background: rgba(184, 134, 11, 0.1); color: var(--primary-gold-light); }
.bg-cyan { background: rgba(139, 115, 85, 0.1); color: var(--secondary-bronze); }
.bg-yellow { background: rgba(218, 165, 32, 0.1); color: var(--primary-gold); }
.bg-indigo { background: rgba(85, 107, 47, 0.1); color: var(--secondary-sage); }
.bg-emerald { background: rgba(193, 112, 61, 0.1); color: var(--primary-terracotta); }

.function-name {
  font-size: 24rpx;
  color: var(--text-warm);
  font-weight: 500;
  text-align: center;
  line-height: 1.2;
}

/* 【4】公告条 */
.notice-section {
  margin: 0 32rpx 24rpx;
}

.notice-box {
  background: rgba(255,255,255,0.9);
  backdrop-filter: blur(20rpx);
  border-radius: 24rpx;
  padding: 20rpx 24rpx;
  display: flex;
  align-items: center;
  gap: 16rpx;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.08);
  border: 1rpx solid rgba(255,255,255,0.2);
}

.notice-left {
  display: flex;
  align-items: center;
  gap: 8rpx;
  color: var(--primary-terracotta);
  font-weight: bold;
  font-size: 24rpx;
  text-transform: uppercase;
  letter-spacing: 1rpx;
}

.notice-icon {
  font-size: 28rpx;
}

.notice-label {
  font-size: 24rpx;
}

.notice-divider {
  width: 2rpx;
  height: 32rpx;
  background: #e5e7eb;
  margin: 0 8rpx;
}

.notice-text {
  flex: 1;
  font-size: 26rpx;
  color: var(--text-warm);
  font-weight: 500;
}

.notice-arrow {
  font-size: 32rpx;
  color: #d1d5db;
}

/* 【新增】宁选好礼区域 */
.shop-entry-section {
  margin: 0 32rpx 24rpx;
  background: #FFFFFF;
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 20rpx rgba(139, 115, 85, 0.08);
}

.header-right {
  display: flex;
  align-items: center;
}

.more-text {
  font-size: 24rpx;
  color: var(--text-muted);
}

.more-arrow {
  font-size: 24rpx;
  color: var(--text-muted);
  margin-left: 4rpx;
}

.shop-categories {
  white-space: nowrap;
  margin-top: 24rpx;
}

.category-list {
  display: inline-flex;
  gap: 24rpx;
}

.category-card {
  display: inline-flex;
  flex-direction: column;
  align-items: center;
  width: 140rpx;
}

.category-icon-bg {
  width: 100rpx;
  height: 100rpx;
  border-radius: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 12rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.05);
}

.category-icon {
  font-size: 44rpx;
}

.category-name {
  font-size: 24rpx;
  color: var(--text-deep);
  font-weight: 500;
}

/* 【6】当季热玩区域 */
.hot-section {
  margin: 0 32rpx 24rpx;
}

.section-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 24rpx;
}

.header-left {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.section-title {
  font-size: 36rpx;
  font-weight: bold;
  color: var(--text-deep);
}

.new-badge {
  background: var(--gradient-terracotta);
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
}

.new-text {
  font-size: 20rpx;
  color: #FFFFFF;
  font-weight: bold;
  text-transform: uppercase;
  letter-spacing: 1rpx;
}

.category-tabs {
  white-space: nowrap;
}

.tab-item {
  display: inline-block;
  font-size: 26rpx;
  color: #6b7280;
  margin-left: 32rpx;
  padding: 8rpx 0;
  position: relative;
}

.tab-item.active {
  color: var(--primary-gold);
  font-weight: 600;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 4rpx;
  background: var(--primary-gold);
  border-radius: 2rpx;
}

.products-scroll {
  white-space: nowrap;
}

.products-container {
  display: inline-flex;
  gap: 24rpx;
  padding: 0 4rpx;
}

.product-card-large {
  width: 360rpx;
  background: var(--card-white);
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 32rpx rgba(0,0,0,0.12);
  position: relative;
}

.product-image-large {
  width: 100%;
  height: 480rpx;
}

.product-badge {
  position: absolute;
  top: 16rpx;
  left: 16rpx;
  background: rgba(0,0,0,0.6);
  backdrop-filter: blur(10rpx);
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
}

.badge-text {
  font-size: 20rpx;
  color: #FFFFFF;
  font-weight: 500;
}

.product-info-large {
  padding: 20rpx 16rpx;
}

.product-title {
  font-size: 28rpx;
  color: #1f2937;
  font-weight: 600;
  line-height: 1.4;
  margin-bottom: 12rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.product-price-large {
  display: flex;
  align-items: baseline;
  gap: 4rpx;
}

.price-symbol {
  font-size: 24rpx;
  color: var(--primary-terracotta);
  font-weight: bold;
}

.price-amount {
  font-size: 36rpx;
  color: var(--primary-terracotta);
  font-weight: bold;
}

.price-unit {
  font-size: 24rpx;
  color: #9ca3af;
}

/* 【7】榜单区域 */
.ranking-section {
  margin: 0 32rpx 24rpx;
}

.ranking-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 16rpx;
}

.ranking-card {
  padding: 24rpx 16rpx;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.08);
}

.ranking-text {
  font-size: 24rpx;
  font-weight: bold;
  color: #FFFFFF;
}

/* 榜单卡片背景色 - 统一主色系 */
.bg-blue {
  background: var(--gradient-gold);
  color: #ffffff;
}

.bg-green {
  background: var(--gradient-olive);
  color: #ffffff;
}

.bg-purple {
  background: var(--gradient-terracotta);
  color: #ffffff;
}


