<!-- components/custom-nav/index.wxml -->
<view class="custom-nav" style="height: {{statusBarHeight + navHeight}}px; background: {{background}};">
  <view class="nav-status-bar" style="height: {{statusBarHeight}}px;"></view>
  <view class="nav-content" style="height: {{navHeight}}px;">
    <!-- 返回按钮 -->
    <view class="nav-left" bindtap="goBack" wx:if="{{back}}">
      <view class="back-btn" style="border-color: {{color === '#ffffff' ? 'rgba(255,255,255,0.3)' : 'rgba(0,0,0,0.1)'}}">
        <text class="back-icon" style="color: {{color}}">‹</text>
      </view>
    </view>
    
    <!-- 标题 -->
    <view class="nav-title" style="color: {{color}}">
      <text>{{title}}</text>
    </view>
    
    <!-- 占位，保持标题居中 -->
    <view class="nav-right"></view>
  </view>
</view>
<!-- 占位符，防止内容被遮挡 -->
<view class="nav-placeholder" style="height: {{statusBarHeight + navHeight}}px;"></view>
